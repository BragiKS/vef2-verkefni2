<!doctype html>
<html lang="is">

<head>
  <meta charset="utf-8">
  <title><%= locals.title ?? '' %></title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <main>

    <h1><%= locals.title ?? '' %></h1>

    <% if (locals.loggedIn) { %>
      <p>Innskráður notandi: <%= locals.user.name %> (<%= locals.user.username %>)
      <form method="get" action="/logout">
        <button>LOGOUT</button>
      </form>
    <% } else { %>
      <p><a href="/admin">Innskrá</a></p>
    <% } %>

    <ul>
      <li><a href="/">Forsíða</a></li>
      <li><a href="/leikir">Leikir</a></li>
      <li><a href="/stada">Staða</a></li>
      <% if (locals.loggedIn && locals.user.admin) { %>
      <li><a href="/admin">Admin</a></li>
      <% } %>
    </ul>
